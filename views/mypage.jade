extends layout

block content
    p You are currently logged in as #{user.email} #{user.twitter} #{user.facebook}
        a(href='/user/logout') Logout

    form(action='/user', method='post')
        input(type='text', name='name', placeholder='name')
        br
        input(type='text', name='email', placeholder='email')
        br
        input(type='password', name='pw', placeholder='new password')
        br
        input(type='password', placeholder='confirm password')
        br
        select(name='language')
            option 日本語
            option English
            option 中文
            option 한국어
        br
        button(type='submit') Submit

    each code in codes
        p コード番号 #{code.serial}
        table
            tr
                th 拠点名
                th 立ち寄り時刻
                th コメントカード
            each log in code.history
                tr
                    th: a(href='#{log.homeURL}') #{log.name}
                    th #{log.mt}
                    th: a(href='#{log.commentURL}') #{log.commentURL}
        br